@model Foodsharing.Models.ProductContent
@Styles.Render("~/Content/singleProduct")
<div class="containerP bg-white">
    <div class="row">
        <div class="col-md-5">
            <div id="left">
                <div id="image-section"> <img src="https://i.imgur.com/CtL3oQp.jpg" alt=""> </div>
                <div class="brand">
                    <div id="coupon">
                        <div class="h4 text-uppercase">coupon</div>
                    </div>
                    <h1 class="text-uppercase">burger</h1>
                    <h1 class="text-uppercase pl-md-4 pl-sm-2">world</h1>
                </div>
                <div class="d-md-flex flex-md-row" id="validity">
                    <div class="px-lg-5 px-md-3">Valid upto</div>
                    <div class="px-md-3 ml-auto">September 10</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div id="line"></div>
        </div>
        <div class="col-md-5 col-sm-12">
            <div class="h3 text-uppercase pt-md-4" id="offer">up to 50% off</div>
            <div id="offer-description">
                <p>Tap offer to copy the coupon code</p>
                <p>Remember to paste when you checkout</p>
                <p> Online only</p>
            </div>
            <div class="d-flex flex-row justify-content-center rounded mt-4">
                <div class="btn px-xl-5 px-lg-4 px-md-3 px-sm-5 px-4">
                    <div class="d-flex flex-column">
                        <div><span class="fa fa-share-alt fa-2x"></span></div>
                        <div class="text-uppercase font-weight-bold">share</div>
                    </div>
                </div>
                <div class="btn px-xl-5 px-lg-4 px-md-3 px-sm-5 px-4">
                    <div class="d-flex flex-column">
                        <div><span class="fa fa-envelope-o fa-2x"></span></div>
                        <div class="text-uppercase font-weight-bold">mail</div>
                    </div>
                </div>
                <div class="btn px-xl-5 px-lg-4 px-md-3 px-sm-5 px-4">
                    <div class="d-flex flex-column">
                        <div><span class="fa fa-star-o fa-2x">@Model.IdProduit</span></div>
                        <div class="text-uppercase font-weight-bold">save</div>
                    </div>
                </div>
            </div>
            <div id="expiry" class="font-weight-bold">
                <div class="px-3">Valid upto</div>
                <div class="px-3">September 10</div>
            </div>
            <div class="border-bottom text-muted pt-5 d-flex justify-content-center">Copy and paste the code</div>
            <div class="d-flex justify-content-center text-uppercase" id="code">alliswell</div>
        </div>
    </div>
</div>
