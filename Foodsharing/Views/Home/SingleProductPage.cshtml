@model Foodsharing.Models.ProductViewModel
@Styles.Render("~/Content/singleProduct")
<div class="containerP bg-white">
    <div class="row">
        <div class="col-md-5">
            <div id="left">
                <div id="image-section"> <img src="/upload/Products/@Model.TargetProduct.IdProduit/@Model.TargetProduct.Image" alt=""> </div>
                <div class="brand">
                    @*src="https://i.imgur.com/CtL3oQp.jpg"*@
                    <div id="coupon">
                        <div class="h4 text-uppercase text-success">@Model.TargetProduct.Type</div>
                    </div>
                    <div></div>
                </div>
                <div class="d-md-flex flex-md-row" id="validity">
                    <div class="px-lg-4 px-md-3">Published: @Model.TargetProduct.DateProposition.ToString("d MMM yyyy")</div>
                    <div class="px-md-3 ml-auto">Expiration Date: @Model.TargetProduct.DatePeremption.ToString("d MMM yyyy")</div>
                </div>

            </div>

        </div>
        <div class="col-md-1">
            <div id="line"></div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="h3 text-uppercase pt-md-4 text-success" id="offer">@Model.TargetProduct.Title</div>
            <div id="offer-description">
                <p>@Model.TargetProduct.Text</p>
                <p>Brand: @Model.TargetProduct.Marque</p>
                <p>Quantity: @Model.TargetProduct.Quantite</p>
                @if (@Model.TargetProduct.Bio == true)
                {
                    @:<p>Bio</p>
                }
                else
                {
                    @:<p></p>
                }

            </div>
            <div class="d-flex flex-row justify-content-center rounded mt-4">
                <button class="btn btn-success">I take It</button>
            </div>
            <div id="expiry" class="font-weight-bold">
                <div class="px-3"></div>
                <div class="px-3">September 10</div>
            </div>
            <div class="border-bottom text-muted pt-5 d-flex justify-content-center">Offered By</div>
            <div class="d-flex justify-content-center" id="code">@Model.TargetProduct.Prenom @Model.TargetProduct.Nom</div>
        </div>
    </div>
    <a href="/Home/Index">Back</a>
</div>
