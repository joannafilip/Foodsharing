<div class="blog-list clearfix">
    @foreach (Foodsharing.Models.ProductContent item in Model)
    {
        <div class="blog-box row">
            <div class="col-md-4">
                <div class="post-media">
                    <a href="garden-single.html" title="">
                        <img src="/upload/@item.Image" alt="" class="img-fluid">
                        <div class="hovereffect"></div>
                    </a>
                </div><!-- end media -->
            </div><!-- end col -->

            <div class="blog-meta big-meta col-md-8">
                <span class="bg-aqua"><a href="garden-category.html" title="">@item.Type</a></span>
                <h4><a href="garden-single.html" title="">@item.Title</a></h4>
                <p>@item.Text</p>


                @if (@item.Bio = true)
                {
                    @:<small><a href="garden-category.html" title=""><i class="fa fa-eye"></i> Bio</a></small>
                }
                @if (@item.Bio = false)
                {@:<small><a href="garden-category.html" title=""><i class="fa fa-eye"></i></a></small>
                }


                <small><a href="garden-single.html" title="">@item.DatePeremption</a></small>
                <small><a href="#" title="">@item.Prenom @item.Nom</a></small>
            </div><!-- end meta -->
        </div><!-- end blog-box -->
        <hr class="invis">
    }
</div> @*end blog-list*@