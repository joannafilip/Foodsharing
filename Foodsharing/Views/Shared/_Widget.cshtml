@model Foodsharing.Models.ProductViewModel

<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
    <div class="sidebar">
        <div class="widget">
            <h2 class="widget-title">Search</h2>
            <form action="/Home/Product" method="get" class="form-inline search-form">
                <div class="form-group">
                    <input id="SearchString" name="SearchString" type="text" class="form-control" placeholder="Search on the site">
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
            </form>
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">@Model.TitlePost.Title</h2>
            <div class="blog-list-widget">
                <div class="list-group">

                    @foreach (Foodsharing.Models.Widget item in Model.RecentPost)
                    {
                        <a href="garden-single.html" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="w-100 justify-content-between">
                                <img src="/upload/@item.Image" alt="" class="img-fluid float-left">
                                <h5 class="mb-1">@item.UnderTitle</h5>
                                <small>@item.Date.ToString("d MMM yyyy")</small>
                            </div>
                        </a>
                    }
                </div>
            </div><!-- end blog-list -->
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">@Model.Advertising.Title</h2>
            <div class="banner-spot clearfix">
                <div class="banner-img">
                    <img src="/upload/@Model.Advertising.Image" alt="" class="img-fluid">
                </div><!-- end banner-img -->
            </div><!-- end banner -->
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">@Model.Instagram.Title</h2>
            <div class="instagram-wrapper clearfix">
                @foreach (Foodsharing.Models.Widget item in Model.InstagramPhoto)
                {
                    <a href="#"><img src="/upload/@item.Image" alt="" class="img-fluid"></a>
                }
            </div><!-- end Instagram wrapper -->
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">@Model.Categorie.Title</h2>
            <div class="link-widget">
                <ul>
                    @foreach (Foodsharing.Models.Widget item in Model.PopularCategorie)
                    {
                        <li><a href="#">@item.UnderTitle<span>(@item.Number)</span></a></li>
                    }
                </ul>
            </div><!-- end link-widget -->
        </div><!-- end widget -->
    </div><!-- end sidebar -->
</div><!-- end col -->
